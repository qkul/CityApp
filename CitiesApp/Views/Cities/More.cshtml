@using CitiesApp.ViewModels
@using CitiesApp.Models
@model CityViewModel
@{
    ViewData["Title"] = "More";
}
<div>
    <h1 class="text-center">@Model.Name</h1>  
    <h4><b>Description: </b><em>@Model.Description</em></h4>
</div>

@if (Model.Photos.Count == 0)
{
    <div>
        <h3>Фотографий нет</h3>
    </div>
}
else
{
    @foreach (var p in Model.Photos)
    {
        <img src="@Url.Action("GetPhoto", new { id = p.Id })" alt="@p.Id" />
        <form asp-action="DeletePhoto" asp-route-id="@p.Id">
            <input type="hidden" asp-for="@p.Id" />
            <input type="submit" value="Delete" class="btn btn-primary" />
        </form>
    }
}
<div>
    <a href="@Url.Action("AddPhoto", new { id = Model.Id })" class="btn btn-primary btn-xs dropdown-toggle" role="button">Добавить новую фотографию</a>
    <a asp-action="Index" class="btn btn-primary btn-xs dropdown-toggle" role="button">Back to List</a>
</div>