@using CitiesApp.ViewModels
@using CitiesApp.Models
@model CityViewModel
@{
    ViewData["Title"] = "More";
}
<div>
    <h3>@Model.Id</h3>
    <h3>@Model.Name</h3>
    <h5>@Model.Description</h5>
</div>

@if (Model.Photos.Count == 0)
{
    <div>
        <h3>Фотографий нет</h3>
    </div>
}
else
{
    @foreach (var p in Model.Photos)
    {
        <img src="@Url.Action("GetPhoto", new { id = p.Id })" alt="@p.Id" />
        <form asp-action="DeletePhoto" asp-route-id="@p.Id">
            <input type="hidden" asp-for="@p.Id" />
            <input type="submit" value="Delete" class="btn btn-default" />
        </form>
    }
}
<div>
    <a href="@Url.Action("AddPhoto", new { id = Model.Id })">Добавить новую фотографию</a>
</div>