@using CitiesApp.ViewModels
@model CityViewModel

@{
    ViewData["Title"] = "More";
}

<div>
    <h3>@Model.Id</h3>
    <h3>@Model.Name</h3>
</div>

@if (Model.Photos == null)
{
    <div>
        <h3>Фотографий нет</h3>
    </div>
}
else
{
    @foreach (var p in Model.Photos)
    {
        @if (p.Image != null)
        {
            <img style='width:300px; height:250px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.Image))" />
        }
    }
}
    <div>
        <a href="@Url.Action("AddPhoto", new { id = Model.Id })">Добавить новую фотографию</a>
    </div>